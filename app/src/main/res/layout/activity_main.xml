<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.jason.customprogressbar.view.HorizontalProgressbarWithProgress
                android:id="@+id/cpb"
                android:layout_marginTop="30dp"
                android:progress="0"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="13dp"/>

        <com.jason.customprogressbar.view.HorizontalProgressbarWithProgress
                android:layout_marginTop="30dp"
                android:progress="50"
                android:padding="5dp"
                app:progress_text_color="#44ff0000"
                app:progress_unreach_color="#f000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.jason.customprogressbar.view.HorizontalProgressbarWithProgress
                android:layout_marginTop="30dp"
                android:progress="100"
                android:padding="5dp"
                app:progress_text_color="#44ff0000"
                app:progress_unreach_color="#f000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.jason.customprogressbar.view.RoundProgressbarWithProgress
                android:layout_marginTop="30dp"
                android:progress="30"
                android:padding="5dp"
                app:radius="40dp"
                app:progress_text_color="#000"
                app:progress_unreach_color="#ff00"
                app:progress_text_size="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.jason.customprogressbar.view.RoundProgressbarWithProgress
                android:id="@+id/rpwp"
                android:layout_marginTop="30dp"
                android:progress="0"
                android:padding="5dp"
                app:radius="60dp"
                app:progress_text_color="#000"
                app:progress_text_size="30sp"
                app:progress_unreach_color="#ff00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>

